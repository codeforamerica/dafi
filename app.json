{
  "name": "DAFI",
  "description": "Heroku review apps from GitHub PRs",
  "scripts": {
    "postdeploy": "bin/rails heroku:postdeploy"
  },
  "formation": {
    "web": {
      "quantity": 1
    },
    "scheduler": {
      "quantity": 1
    }
  },
  "stack": "heroku-18",
  "env": {
    "LOG_LEVEL": {
      "value": "info"
    },
    "RACK_ENV": {
      "value": "production"
    },
    "RAILS_ENV": {
      "value": "production"
    },
    "RAILS_SERVE_STATIC_FILES": {
      "value": "enabled"
    },
    "SECRET_KEY_BASE": {
      "description": "Secret key base for Rails.",
      "generator": "secret"
    },
    "SEARCH_REFRESH_INTERVAL": {
      "value": "5s"
    }
  },
  "addons": [
    "heroku-postgresql"
  ]
}