<% content = capture_form do |f| %>
  <%= f.cfa_input_field(:name, "Your Name", classes: ["form-width--med"]) %>
  <%= f.cfa_input_field(:password, "Choose a password", type: "password", classes: ["form-width--med"], help_text: "This should be at least #{User.password_length.min} characters.") %>
<% end %>

<% footer = capture_form do |f| %>
  <%= f.cfa_button "Set up account" %>
<% end %>

<%= render 'shared/form_card',
           form_resource: @user,
           form_options: { url: { action: :update }, html: { method: :put } },
           title: "Set up your account",
           content: content,
           footer: footer
%>
