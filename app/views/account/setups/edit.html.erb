<% content = capture_form do |f| %>
  <%= f.cfa_input_field(:name, t('account.setups.edit.name'), classes: ["form-width--med"]) %>
  <%= f.cfa_input_field(:password, t('account.setups.edit.password'), type: "password", classes: ["form-width--med"], help_text: t('shared.password_help')) %>
<% end %>

<% footer = capture_form do |f| %>
  <%= f.cfa_button t('account.setups.edit.set_up_account') %>
<% end %>

<%= render 'shared/form_card',
           form_resource: @user,
           form_options: { url: { action: :update }, html: { method: :put } },
           title: t('.form_card_title'),
           content: content,
           footer: footer
%>
