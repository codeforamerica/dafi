<% content = capture_form do |f| %>
  <%= f.cfa_input_field(:current_password, I18n.t('account.accounts.edit.current_password'), type: "password", classes: ["form-width--med"]) %>

  <%= f.cfa_input_field(:password, I18n.t('account.accounts.edit.new_password'), type: "password", classes: ["form-width--med"], help_text: I18n.t('general.password_help', min_length: @user.class.password_length.min)) %>
  <%= f.cfa_input_field(:password_confirmation, I18n.t('account.accounts.edit.password_confirmation'), type: "password", classes: ["form-width--med"]) %>
<% end %>

<% footer = capture_form do |f| %>
  <%= f.cfa_button I18n.t('general.update') %>
<% end %>

<%= render 'shared/form_card',
           form_resource: @user,
           form_options: { url: { action: :update }, html: { method: :put } },
           title: t('.form_card_title'),
           content: content,
           footer: footer
%>
