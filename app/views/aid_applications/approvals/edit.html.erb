<%= render 'aid_applications/navigation' %>

<div class="grid__item width-two-thirds shift-one-sixth">
  <div class="form-card">
    <header class="form-card__header">
      <h1>Determination</h1>
    </header>

    <% if @aid_application.approved? %>
      <p>Application was approved on <strong><%= @aid_application.approved_at.to_s(:month_day_year) %></strong> by
        <strong><%= @aid_application.approver.name %></strong>.</p>

      <% unless @aid_application.disbursed? %>
        <p><%= link_to "Disburse Payment Card", edit_organization_aid_application_disbursement_path(current_organization, @aid_application) %></p>
      <% end %>
    <% else %>
      <%= form_for(@aid_application, url: { action: :update }, builder: DafiFormBuilder, html: { novalidate: 'novalidate' }) do |f| %>
        <div class="form-card__footer">
          <p><%= f.button "Approve and exit", type: "submit", name: 'form_action', value: 'approve_and_exit',  class: 'button button--primary' %></p>
          <p><%= f.button "Approve and continue to disbursement", type: 'submit', name: 'form_action', value: 'submit', class: 'button button--primary' %></p>

          <br>
          <br>
          <%= link_to t('general.delete_this_application'),
                      organization_aid_application_path(current_organization, current_aid_application),
                      method: :delete,
                      class: "button button--danger",
                      data: { confirm: "Are you sure you want to delete this application?" } %>
        </div>
        </div>
      <% end %>
    <% end %>
    </div>
</div>
